#:kivy 1.11.1
#:import FigureCanvasKivyAgg kivy.garden.matplotlib.backend_kivyagg
#:import plt matplotlib.pyplot

<ConfirmPopup>:
	size_hint: 0.4,0.2
	pos_hint: {'left': 1, 'top': 1}
	height: 200
	width: 500
	title: 'Confirm exit'

<WellLitPopup>:
	size_hint: 0.4,0.2
	pos_hint: {'left': 1, 'top': 1}
	height: 200
	width: 800

<MetaLabel>:
	text_size: self.size
	halign: 'left'
	padding_x: 5
	markup: True
	font_size: 20
<Button>
	font_size: 30

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        FileChooserListView:
            id: filechooser
            path: root.load_path


        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Cancel'
                on_release: root.cancel()
            Button:
                text: 'Load'
                on_release: root.load(filechooser.selection)


<TubeToWellWidget>:
	orientation: 'vertical'
	BoxLayout:
		orientation: 'horizontal'
		pos_hint: {'left': 1, "top": 1}
		size_hint_y: 0.3
		BoxLayout:
			size_hint_x: None
    		width: 300
			id: metadata_box
			orientation: 'vertical'
			Label:
				id: recorder_label
				text: '[b]Recorder:[/b] \n'
			Label:
				id: aliquoter_label
				text: '[b]Aliquoter:[/b] \n'
			Label:
				id: plate_barcode_label
				text: '[b]Plate Barcode:[/b] \n'
			Label:
				id: tube_barcode
				text: '[b]Tube Barcode:[/b]'
			Label:
				id: tube_barcode_label
				font_size: 50
			Button:
				size_hint_y: 1.5
				text: 'Load Sample List'
				on_press: root.show_load()

	    Label:
	    	id: status
	        text: "Please scan the recorder's barcode"
	        font_size: 50
	        bold: True
    	BoxLayout:
    		size_hint_x: None
    		width: 300
		    orientation: 'vertical'
		    id: button_box
		    TextInput:
		    	id: textbox
		    	multiline: False
		    	size_hint_y: .5
		    	focus: True
		    Button:
		    	text: 'Undo Last Tube'
		    	on_press: root.undoTube()
		    Button:
		    	text: 'Finish Plate'
		    	on_press: root.finishPlate()
		    Button:
		        text: 'Quit'
		        on_press: root.quit_button()
    WellPlot:
        id: dest_plate
        shape: 'circle'
        type: 'dest_plate'
        size_hint: 1, 0.5

		