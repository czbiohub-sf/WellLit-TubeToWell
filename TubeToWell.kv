#:kivy 1.11.1
#:import FigureCanvasKivyAgg kivy.garden.matplotlib.backend_kivyagg
#:import plt matplotlib.pyplot

<ConfirmPopup>:
	size_hint: 0.4,0.2
	pos_hint: {'left': 1, 'top': 1}
	height: 200
	width: 500
	title: 'Confirm exit'

<WellLitPopup>:
	size_hint: 0.4,0.2
	pos_hint: {'left': 1, 'top': 1}
	height: 200
	width: 800

<MetaLabel>:
	text_size: self.size
	halign: 'left'
	padding_x: 5
	markup: True
	font_size: 20
<Button>
	font_size: 30

<LoadDialog>:
    BoxLayout:
    	size_hint: 0.8,0.2
	    pos_hint: {'left': 1, 'top': 1}
        orientation: 'vertical'
        FileChooserListView:
            id: filechooser
            path: root.load_path


        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Cancel'
                on_release: root.cancel()
            Button:
                text: 'Load'
                on_release: root.load(filechooser.selection)
				
<ChooseSaveDirDialog>:
	BoxLayout:
    	size_hint: 0.8,0.2
	    pos_hint: {'left': 1, 'top': 1}
        orientation: 'vertical'
        FileChooserListView:
            id: filechooser
            path: root.save_dir


        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Cancel'
                on_release: root.cancel()
            Button:
                text: 'Choose folder'
                on_release: root.choose(filechooser.path)

<ChooseTemplateDialog>:
	BoxLayout:
    	size_hint: 0.8,0.2
	    pos_hint: {'left': 1, 'top': 1}
        orientation: 'vertical'
        FileChooserListView:
            id: filechooser
            path: root.template_path


        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Cancel'
                on_release: root.cancel()
            Button:
                text: 'Choose template'
                on_release: root.choose(filechooser.selection)

<TubeToWellWidget>:
	orientation: 'vertical'
	BoxLayout:
		orientation: 'horizontal'
		pos_hint: {'left': 1, "top": 1}
		size_hint_y: 0.3
		BoxLayout:
			size_hint_x: None
    		width: 300
			id: metadata_box
			orientation: 'vertical'
            Label:
				id: user_label
				text: 'User:'
				font_name: 'Roboto-Bold'
				font_size: 35
			Label:
			    id: user
			    font_size: 25
			    text: ''
			Label:
				id: plate_barcode_label
				text: 'Plate Barcode:'
				font_name: 'Roboto-Bold'
				font_size: 35
			Label:
			    id: plate_barcode
			    font_size: 25
			    text: ''
            Label:
				id: tube_barcode_label
                text: 'Tube Barcode:'
				font_name: 'Roboto-Bold'
				font_size: 35
			Label:
				id: tube_barcode
				text: ''
				font_size: 25

			Button:
			    text: 'Load Sample List'
			    on_press: root.show_load()

			Button:
				text: 'Choose save location'
				on_press: root.showChooseSaveDirectory()

			Button:
				text: 'Choose template file'
				on_press: root.showChooseTemplateFile()

	    Label:
	    	id: status
	        text: "Please scan or key in plate barcode"
	        font_size: 50
	        bold: True
    	BoxLayout:
    		size_hint_x: None
    		width: 300
		    orientation: 'vertical'
		    id: button_box
		    TextInput:
		    	id: textbox
		    	multiline: False
		    	size_hint_y: .5
		    	focus: True
		    Button:
		    	text: 'Undo Last Tube'
		    	on_press: root.undoTube()
			Button:
				text: 'Undo specific well'
				on_press: root.cancelSpecificWell()
		    Button:
		    	text: 'Finish Plate'
		    	on_press: root.finishPlate()
		    Button:
		        text: 'Quit'
		        on_press: root.quit_button()
    WellPlot:
        id: dest_plate
        shape: 'circle'
        type: 'dest_plate'
        size_hint: 1, 0.5

		